    "paths": {
        "/login": {
            "post": {
                "tags": ["Authentication"],
                "description": "Login untuk mendapatkan bearer token sebagai akses ke dalam API",
                "requestBody":{
                    "description": "Kebutuhan/Kewajiban yang harus diberikan untuk informasi login",
                    "required": true,
                    "content": {
                        "multipart/form-data":{
                            "schema":{
                                "type": "object",
                                "required": ["email","password"],
                                "properties": {
                                    "email":{
                                        "type": "string",
                                        "format": "email"
                                    },
                                    "password":{
                                        "type": "string",
                                        "format": "password"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Sukses mendapatkan access_token",
                        "content": {
                            "application/json":{
                                "schema": {
                                    "properties": {
                                        "message":{
                                            "type": "string",
                                            "example": "Login success"
                                        },
                                        "access_token":{
                                            "type": "string",
                                            "example": "14|wvTzJbpAllxqATUR2xHdYNneAv23kqtEweLj5aOg58f0105b"
                                        },
                                        "token_type":{
                                            "type": "string",
                                            "example": "Bearer"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "401":{
                        "description": "Gagal melakukan login",
                        "content": {
                            "application/json":{
                                "schema":{
                                    "properties": {
                                            "message":{
                                                "type": "string",
                                                "example": "Unauthorized"
                                            }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/logout": {
            "post": {
                "tags": ["Authentication"],
